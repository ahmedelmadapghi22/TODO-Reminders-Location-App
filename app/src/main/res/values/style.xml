<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryDark">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/purple_200</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/purple_200</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>

        <item name="android:windowBackground">@color/light_blue</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@android:color/white</item>
    </style>

    <style name="textViewStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_20ssp</item>
    </style>

    <style name="textViewReminder">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="android:padding">@dimen/_2sdp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="textViewAttr" parent="textViewReminder">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">bold</item>

    </style>
</resources>